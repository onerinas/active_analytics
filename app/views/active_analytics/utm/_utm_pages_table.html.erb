<% if pages.any? %>
  <table class="table table-sm">
    <thead>
      <tr>
        <th>Page</th>
        <th class="number">Views</th>
        <th class="number text-muted">% of Traffic</th>
      </tr>
    </thead>
    <tbody>
      <% pages.each do |page| %>
        <% percentage = total_views > 0 ? (page.total.to_f / total_views * 100).round(1) : 0 %>
        <tr style="vertical-align: middle;">
          <td>
            <%= link_to page_path(site: page.host, page: page.path), class: "text-dark" do %>
              <%= page.url %>
            <% end %>
          </td>
          <td class="number">
            <%= format_view_count(page.total) %>
          </td>
          <td class="number text-muted">
            <%= percentage %>%
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted">No page data available for this UTM parameter.</p>
<% end %>
