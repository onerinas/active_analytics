<section class="card">
  <%= render "/active_analytics/sites/histogram_header", histogram: @histogram, previous_histogram: @previous_histogram %>
  <%= render "/active_analytics/sites/histogram", histogram: @histogram %>
</section>

<section class="card">
  <h3>UTM <%= @utm_type.capitalize %>: <%= @utm_value %></h3>
  <p class="text-muted">Pages visited from this UTM <%= @utm_type %></p>

  <% if @pages.any? %>
    <table class="table table-sm">
      <thead>
        <tr>
          <th>Page</th>
          <th class="text-right">Views</th>
        </tr>
      </thead>
      <tbody>
        <% @pages.each do |page| %>
          <tr>
            <td>
              <%= link_to page_path(page.url), class: "text-dark" do %>
                <%= page.url %>
              <% end %>
            </td>
            <td class="text-right">
              <%= number_with_delimiter(page.total) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No page data available for this UTM <%= @utm_type %>.</p>
  <% end %>
</section>
